<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="2dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/setting1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="11dp"
                android:src="@drawable/m1_unselect"/>
            <ImageView
                android:id="@+id/setting2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="11dp"
                android:src="@drawable/m2_unselect"
                />
            <ImageView
                android:id="@+id/setting3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@drawable/m3_select"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/seat"
            android:layout_below="@+id/title"
            android:layout_marginLeft="3dp"
            android:layout_width="90dp"
            android:layout_height="130dp"
            android:src="@drawable/seat_low_bolster"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/plus"
                android:background="#b5ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/plus_image"/>

            <TextView
                android:id="@+id/value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="20dp"
                android:text="0"/>

            <ImageButton
                android:id="@+id/minus"
                android:background="#b5ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/minus_image"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/nextBT"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text=">Next"
        android:textSize="20dp"/>

</RelativeLayout>